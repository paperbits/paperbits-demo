{
    "compilerOptions": {
        "target": "es5",
        "lib": [ "es2015" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "noStrictGenericChecks": true,
        "removeComments": true,
        "noLib": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowUnreachableCode": true,
        "listFiles": false,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        //"jsx": "react"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}